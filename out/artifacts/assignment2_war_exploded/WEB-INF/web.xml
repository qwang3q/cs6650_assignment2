<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>SkierServlet</servlet-name>
        <servlet-class>server.SkierServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResortServlet</servlet-name>
        <servlet-class>server.ResortServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatServlet</servlet-name>
        <servlet-class>server.StatServlet</servlet-class>
    </servlet>

    <listener>
        <listener-class>server.StatisticOperator</listener-class>
    </listener>

    <servlet-mapping>
        <servlet-name>SkierServlet</servlet-name>
        <url-pattern>/skiers/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResortServlet</servlet-name>
        <url-pattern>/resorts/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatServlet</servlet-name>
        <url-pattern>/statistics/*</url-pattern>
    </servlet-mapping>
</web-app>